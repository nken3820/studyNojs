<div class="mt-4">
    <div class="row">
        {{#each posts}}
        <div class="col-sm-6 col-lg-4 card-container">
            <div class="card card-items">
                <a href="/news/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
              <div class="card-body">
                <a href="/news/{{this.slug}}">
                    <h5 class="card-title">{{this.title}}</h5>
                </a>
                <p class="card-text">{{this.header}}</p>
                <a href="/news/{{this.slug}}" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>